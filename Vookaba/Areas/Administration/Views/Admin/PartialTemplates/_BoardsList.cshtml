@model IEnumerable<Vookaba.Services.DTO.BoardDto>

<table id="boards-control" class="dashboard-table">
    <thead class="text-center">
        <tr>
            <th>@Localizer["Id"]</th>
            <th>@Localizer["Name"]</th>
            <th>@Localizer["Status"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="5" class="text-center">
                <a asp-area="" asp-controller="Board" asp-action="Create">[@Localizer["New board"]]</a>
            </td>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var board in Model)
        {
            var status = board.IsDisabled ?
            Localizer["Disabled"] :
            board.IsHidden ? Localizer["Hidden"] : Localizer["Public"];

            <tr>
                <td>
                    <a asp-area="" asp-controller="Board" asp-action="Index" asp-route-board="@board.Key">@board.Key</a>
                </td>
                <td>@board.Name</td>
                <td>@status</td>
                <td class="text-center">
                    <span>
                        <a asp-area="" asp-controller="Board" asp-action="Edit" asp-route-board="@board.Key">[@Localizer["Edit"]]</a>
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>