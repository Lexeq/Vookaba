@using Vookaba.Utils
<header class="navbar">
    <div class="navbar-path">
        <a asp-route="home">
            <img src="~/images/home.png" />
            <span>@Localizer["Go to home page"]</span>
        </a>
        @if (ViewContext.RouteData.Values.ContainsKey("thread"))
        {
            var board = Context.Request.RouteValues["board"];
            <a asp-route="board" asp-route-board="@board" >@($"/{board}/")</a>
        }
    </div>
    @if (User.IsRegistred())
    {
        <partial name="./PartialTemplates/_AccountInfo" />
    }
</header>