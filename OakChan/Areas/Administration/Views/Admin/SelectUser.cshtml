@model SelectUserViewModel

<h3>@Localizer["Select user"]</h3>
<div class="dashboard-section">
    <table class="dashboard-table">
        <thead>
            <tr>
                <th>@Localizer["ID"]</th>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td class="text-center"><a asp-action="EditStaff" asp-route-userId="@user.Id">[@Localizer["Select"]]</a></td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.PagesInfo.TotalPages > 1)
    {
        <partial name="_Paginator" model="Model.PagesInfo" />
    }
</div>